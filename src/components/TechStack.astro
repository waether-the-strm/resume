---
interface Stack {
  title: string;
  items: string[];
}

interface Props {
  records: Stack[];
}

const { records } = Astro.props;
---

<section class="mb-5">
  <h2 class="text-xl text-gray-300 border-b border-gray-700 mb-5">
    Tech Stack
  </h2>
  {
    records.map((category) => (
      <article class="flex items-center mb-5">
        <h3 class="text-lg text-gray-200 mb-5 relative flex-1 after:content-[' '] after:top-2.5 after:w-full after:h-px after:bg-[#39f] after:absolute after:opacity-15 after:z-[-1] after:flex-1 after:shadow-[1em_0_5px_#181818,1.5em_0_15px_#181818]">
          {category.title}
        </h3>
        <ul class="flex justify-end gap-2 flex-wrap px-2 list-none z-100">
          {category.items.map((item) => (
            <li class="border-2 border-[#39f] text-[#39f] py-1 px-2 rounded-md whitespace-nowrap">
              {item}
            </li>
          ))}
        </ul>
      </article>
    ))
  }
</section>
