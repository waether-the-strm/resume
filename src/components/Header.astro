---
import { classes } from "../shared/classes";

interface Header {
  name: string;
  title: string;
  description: string[];
}

type Props = Header;
const { name, title, description } = Astro.props;
---

<header class="text-base leading-relaxed sm:pt-8 mb-10">
  <h1 class={classes.h1}>
    {name}
    <br />
    <small class="text-slate-500">{title}</small>
  </h1>
  <div class="max-w-4xl">
    {
      description.map((para) => (
        <p
          set:html={para.replaceAll(
            /<strong>/g,
            '<strong class="text-slate-300/90 print:text-slate-700">'
          )}
          class="mb-5"
        />
      ))
    }
  </div>
</header>
