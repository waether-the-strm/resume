---
import { classes } from "../shared/classes"

interface Props {
  tech: string[]
  links:
    | {
        demo?: string | undefined
        github?: string | undefined
        case_study?: string | undefined
      }
    | undefined
  projectName: string
}

const { tech, links, projectName } = Astro.props
---

<div class="mt-4 w-full">
  {
    (links?.github || links?.case_study) && (
      <div class="mb-2 flex justify-start gap-4">
        {links.github && (
          <a
            href={links.github}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center gap-2 text-slate-400 transition-colors hover:text-blue-400"
            aria-label={`View ${projectName} on GitHub`}
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              viewBox="0 0 24 24"
              fill="currentColor"
            >
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
            </svg>
            <span class="text-sm opacity-0 transition-opacity group-hover:opacity-100">
              view on GitHub
            </span>
          </a>
        )}
        {links.case_study && (
          <a
            href={links.case_study}
            class="inline-flex items-center gap-2 text-slate-400 transition-colors hover:text-blue-400"
            aria-label={`Read case study for ${projectName}`}
          >
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-5 w-5"
              viewBox="0 0 20 20"
              fill="currentColor"
            >
              <path
                fill-rule="evenodd"
                d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z"
                clip-rule="evenodd"
              />
            </svg>
            <span class="text-sm opacity-0 transition-opacity group-hover:opacity-100">
              read case study
            </span>
          </a>
        )}
      </div>
    )
  }
  <hr class="my-4 border-t border-slate-700/40" />
</div>
<div class="flex flex-wrap gap-2">
  {tech.map((techItem: string) => <span class={classes.pillSm}>{techItem}</span>)}
</div>
