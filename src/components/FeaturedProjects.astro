---
import { classes } from "../shared/classes"

interface Project {
  name: string
  description: string
  role: string
  impact: string
  tech: string[]
  status: "live" | "in-development" | "completed"
  year: string
  featured_image?: string
  links?: {
    demo?: string
    github?: string
    case_study?: string
  }
}

interface Props {
  records: Project[]
}

const { records } = Astro.props

const getStatusColor = (status: Project["status"]) => {
  switch (status) {
    case "live":
      return "bg-green-500/20 text-green-300"
    case "in-development":
      return "bg-blue-500/20 text-blue-300"
    case "completed":
      return "bg-slate-500/20 text-slate-300"
  }
}
---

<section class={classes.section}>
  <h2 class={classes.h2}>featured projects</h2>
  <div class="grid grid-cols-1 gap-6 md:grid-cols-2 lg:grid-cols-3">
    {
      records.map((project, index) => (
        <article
          class="group rounded-xl bg-slate-900/30 p-6 ring-1 ring-slate-800/40 backdrop-blur-sm transition-all duration-300 ease-out hover:scale-[1.02] hover:bg-slate-900/60 hover:shadow-2xl hover:shadow-blue-500/10 hover:ring-slate-700/60"
          data-animate
          data-animate-delay={index * 100}
        >
          <div class="mb-4 flex items-start justify-between">
            <h3 class={classes.h3}>{project.name}</h3>
            <span class={`rounded-full px-2 py-1 text-xs ${getStatusColor(project.status)}`}>
              {project.status}
            </span>
          </div>

          <p class="mb-4 text-slate-400">{project.description}</p>

          <div class="mb-4">
            <span class="text-sm text-slate-300">{project.role}</span>
          </div>

          <p class="mb-4 hidden text-sm text-slate-300 group-hover:block md:block">
            {project.impact}
          </p>

          <div class="mb-4 flex flex-wrap gap-2">
            {project.tech.map((tech) => (
              <span class={classes.pill}>{tech}</span>
            ))}
          </div>

          {project.links && (
            <div class="flex justify-end gap-4">
              {project.links.demo && (
                <a
                  href={project.links.demo}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-slate-400 transition-colors hover:text-blue-400"
                  aria-label={`Visit ${project.name} demo`}
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5"
                    viewBox="0 0 20 20"
                    fill="currentColor"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
                      clip-rule="evenodd"
                    />
                  </svg>
                </a>
              )}
              {project.links.github && (
                <a
                  href={project.links.github}
                  target="_blank"
                  rel="noopener noreferrer"
                  class="text-slate-400 transition-colors hover:text-blue-400"
                  aria-label={`View ${project.name} on GitHub`}
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5"
                    viewBox="0 0 24 24"
                    fill="currentColor"
                  >
                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z" />
                  </svg>
                </a>
              )}
              {project.links.case_study && (
                <a
                  href={project.links.case_study}
                  class="text-slate-400 transition-colors hover:text-blue-400"
                  aria-label={`Read case study for ${project.name}`}
                >
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="h-5 w-5"
                    viewBox="0 0 20 20"
                    fill="currentColor"
                  >
                    <path
                      fill-rule="evenodd"
                      d="M4 4a2 2 0 012-2h4.586A2 2 0 0112 2.586L15.414 6A2 2 0 0116 7.414V16a2 2 0 01-2 2H6a2 2 0 01-2-2V4zm2 6a1 1 0 011-1h6a1 1 0 110 2H7a1 1 0 01-1-1zm1 3a1 1 0 100 2h6a1 1 0 100-2H7z"
                      clip-rule="evenodd"
                    />
                  </svg>
                </a>
              )}
            </div>
          )}
        </article>
      ))
    }
  </div>
</section>

<style>
  /* Remove the fadeInUp keyframes as we're using the global animation system */
</style>
