---
import { classes } from "../shared/classes";

interface School {
  period: string;
  institution: string;
  degree: string;
  place: string;
}

interface Props {
  records: School[];
}

const { records } = Astro.props;
---

<section class={classes.section}>
  <h2 class={classes.h2}>Education</h2>
  <ol class={"md:grid grid-cols-3 pl-8 gap-8" + classes.marker} reversed>
    {
      records.map(({ period, institution, degree, place }) => (
        <li class="mb-5">
          <p class="mb-3">{period}</p>
          <h3 class={classes.h3}>{degree}</h3>
          <p class="font-normal text-base leading-snug ">{institution}</p>
          <em class="mb-5 text-sm text-slate-500" set:html={place} />
        </li>
      ))
    }
  </ol>
</section>
