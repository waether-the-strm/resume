---
interface School {
  period: string;
  institution: string;
  degree: string;
}

interface Props {
  records: School[];
}

const { records } = Astro.props;
---

<section class="mb-5">
  <h2 class="text-xl text-gray-300 border-b border-gray-700 mb-5">Education</h2>
  {
    records.map(({ period, institution, degree }) => (
      <div class="mb-5">
        <p class="text-gray-400 mb-5">
          <strong>{period}</strong>
        </p>
        <h3 class="text-lg text-gray-200 mb-5">{institution}</h3>
        <p class="text-gray-400 mb-5">
          <strong>{degree}</strong>
        </p>
      </div>
    ))
  }
</section>
