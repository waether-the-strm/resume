---
interface Props {
  gtagId: string;
}

const { gtagId } = Astro.props;
---

<script
  async
  src={"https://www.googletagmanager.com/gtag/js?id=" + gtagId}
  is:inline></script>

<script is:inline define:vars={{ id: gtagId }}>
  window.dataLayer = window.dataLayer || [];
  function gtag() {
    dataLayer.push(arguments);
  }
  gtag("js", new Date());
  gtag("config", id);
</script>
