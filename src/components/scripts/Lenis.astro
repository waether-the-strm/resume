---
interface Props {
  isEnabled?: boolean;
}

const { isEnabled } = Astro.props;
---

<script is:inline define:vars={{ isEnabled }}>
  if (isEnabled) {
    const lenis = new window.Lenis();

    function raf(time) {
      lenis.raf(time);
      requestAnimationFrame(raf);
    }

    requestAnimationFrame(raf);
  }
</script>
