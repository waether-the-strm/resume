---
import {
  Header,
  Contact,
  TechStack,
  Experience,
  Education,
  Scripts,
} from "../components";

import { Toggle } from "../components/react";

type HeadersProps = Parameters<typeof Header>[0];
type ContactProps = Parameters<typeof Contact>[0];
type TechStackProps = Parameters<typeof TechStack>[0];
type ExperienceProps = Parameters<typeof Experience>[0];
type EducationProps = Parameters<typeof Education>[0];

interface Props {
  frontmatter: {
    header: HeadersProps;
    contact: ContactProps;
    techStack: TechStackProps;
    experience: ExperienceProps;
    education: EducationProps;
  };
}

const {
  frontmatter: { header, contact, techStack, experience, education },
} = Astro.props;
---

<html lang="en">
  <head>
    <Scripts.GTM />
    <script src="https://unpkg.com/lenis@1.1.9/dist/lenis.min.js" is:inline
    ></script>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Jan Mirecki is a seasoned Frontend Developer and Product Designer with extensive experience in React, TypeScript, and CSS. Having transitioned from UI/UX design to full-time development in 2015, Jan excels in creating high-quality projects focused on design. He has collaborated with various organizations, including SWPS University, CD Projekt Red, and Avon Cosmetics Polska. Jan is also passionate about IT volunteering, tech leading, and teaching."
    />
    <meta
      name="keywords"
      content="Jan Mirecki, Frontend Developer, Product Designer, React, TypeScript, CSS, UI/UX Design, SWPS University, CD Projekt Red, Avon Cosmetics Polska, IT Volunteering, Tech Leading, Design Consulting, Web Development, JavaScript, HTML5, SASS, Web Technologies"
    />

    <link
      rel="stylesheet"
      href="https://unpkg.com/lenis@1.1.9/dist/lenis.css"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,600;1,300&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Poppins", sans-serif;
      }
    </style>
    <title>Jan Mirecki â€“ Frontend Developer</title>
  </head>
  <body
    class="bg-slate-950 bg-gradient-to-tr from-slate-950 to-indigo-700/10 bg-fixed dark:bg-slate-100 dark:from-slate-100 dark:to-indigo-200/10 transition-colors print:bg-none print:bg-white print:text-slate-900 print:text-sm text-base text-slate-400 leading-relaxed antialiased"
  >
    <Scripts.GTMns />
    <div
      class="print:hidden dark:invert fixed h-10 w-16 flex items-center justify-center top-5 right-5 sm:top-10 sm:right-10 z-50 bg-slate-950/60 dark:bg-slate-950/95 dark:ring-1 backdrop-blur-sm rounded-full"
    >
      <Toggle client:only="react" />
    </div>
    <main
      class="max-w-4xl xl:max-w-6xl mx-auto relative md:pt-16 px-8 pb-0 print:p-0 dark:invert"
    >
      <Header {...header} />
      <div class="md:absolute top-8 left-8 right-8 print:static">
        <Contact {...contact} />
      </div>
      <TechStack {...techStack} />
      <Experience {...experience} />
      <Education {...education} />
    </main>
    <footer
      class="print:hidden mt-8 pt-5 pb-1 px-10 border-t-2 bg-slate-950 border-slate-800/80 dark:invert"
    >
      <p class="mb-3">Reach out to me at:</p>
      <Contact {...contact} />
    </footer>
    <Scripts.GA gtagId="G-GKB5E87E47" />
    <Scripts.Lenis isEnabled={true} />
  </body>
</html>
