---
import {
  Header,
  Contact,
  TechStack,
  Experience,
  Education,
  Scripts,
  FeaturedProjects,
} from "../components"

import { Toggle } from "../components/react"

type HeadersProps = Parameters<typeof Header>[0]
type ContactProps = Parameters<typeof Contact>[0]
type TechStackProps = Parameters<typeof TechStack>[0]
type ExperienceProps = Parameters<typeof Experience>[0]
type EducationProps = Parameters<typeof Education>[0]
type FeaturedProjectsProps = Parameters<typeof FeaturedProjects>[0]

interface Props {
  frontmatter: {
    header: HeadersProps
    contact: ContactProps
    techStack: TechStackProps
    featuredProjects: FeaturedProjectsProps
    experience: ExperienceProps
    education: EducationProps
  }
}

const {
  frontmatter: { header, contact, techStack, featuredProjects, experience, education },
} = Astro.props
---

<html lang="en">
  <head>
    <Scripts.GTM />
    <script src="https://unpkg.com/lenis@1.1.9/dist/lenis.min.js" is:inline></script>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta
      name="description"
      content="Jan Mirecki - Frontend Developer & Product Designer based in Oslo. Specialized in React, TypeScript, Design Systems, and user-centered web applications. Available for full-time positions in Norway."
    />

    <meta
      name="keywords"
      content="Frontend Developer Oslo, Product Designer Norway, React Developer, TypeScript, Design Systems, UX/UI Developer, Norwegian work permit"
    />

    <link rel="stylesheet" href="https://unpkg.com/lenis@1.1.9/dist/lenis.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,300;0,600;1,300&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Poppins", sans-serif;
      }
    </style>
    <title>Jan Mirecki â€“ Frontend Developer</title>
  </head>
  <body
    class="bg-slate-950 bg-gradient-to-tr from-slate-950 to-indigo-700/10 bg-fixed text-base leading-relaxed text-slate-400 antialiased transition-colors dark:bg-slate-100 dark:from-slate-100 dark:to-indigo-200/10 print:bg-white print:bg-none print:text-sm print:text-slate-900"
  >
    <Scripts.GTMns />
    <div
      class="fixed right-5 top-5 z-50 flex h-10 w-16 items-center justify-center rounded-full bg-slate-950/60 backdrop-blur-sm sm:right-10 sm:top-10 dark:bg-slate-950/95 dark:ring-1 dark:invert print:hidden"
    >
      <Toggle client:only="react" />
    </div>
    <main class="relative mx-auto max-w-4xl px-8 pb-0 md:pt-16 xl:max-w-6xl dark:invert print:p-0">
      <Header {...header} />
      <div class="left-8 right-8 top-8 md:absolute print:static">
        <Contact {...contact} />
      </div>
      <div data-animate data-animate-delay="100">
        <TechStack {...techStack} />
      </div>
      <div data-animate data-animate-delay="200">
        <FeaturedProjects {...featuredProjects} />
      </div>
      <div data-animate data-animate-delay="300">
        <Experience {...experience} />
      </div>
      <div data-animate data-animate-delay="400">
        <Education {...education} />
      </div>
    </main>
    <footer
      class="mt-8 border-t-2 border-slate-800/80 bg-slate-950 px-10 pb-1 pt-5 dark:invert print:hidden"
    >
      <p class="mb-3">Reach out to me at:</p>
      <Contact {...contact} />
    </footer>
    <Scripts.GA gtagId="G-GKB5E87E47" />
    <Scripts.Lenis isEnabled={true} />
    <Scripts.ScrollAnimations />
  </body>
</html>
