---
import {
  Header,
  Contact,
  TechStack,
  Experience,
  Education,
} from "../components";

import "printed";
import { Toggle } from "../components/react";

type HeadersProps = Parameters<typeof Header>[0];
type ContactProps = Parameters<typeof Contact>[0];
type TechStackProps = Parameters<typeof TechStack>[0];
type ExperienceProps = Parameters<typeof Experience>[0];
type EducationProps = Parameters<typeof Education>[0];

interface Props {
  frontmatter: {
    header: HeadersProps;
    contact: ContactProps;
    techStack: TechStackProps;
    experience: ExperienceProps;
    education: EducationProps;
  };
}

const {
  frontmatter: { header, contact, techStack, experience, education },
} = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <link
      href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;600&display=swap"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Poppins", sans-serif;
      }
    </style>
    <title>Astro</title>
  </head>
  <body
    class="bg-slate-950 dark:bg-slate-100 transition-colors print:bg-white print:text-slate-900 print:text-sm text-base text-slate-400 leading-relaxed antialiased"
  >
    <div
      class="print:hidden dark:invert fixed h-10 w-16 flex items-center justify-center top-10 right-10 z-50 bg-slate-950/60 dark:bg-slate-950/95 dark:ring-1 backdrop-blur-sm rounded-full"
    >
      <Toggle client:only="react" />
    </div>
    <div
      class="max-w-4xl xl:max-w-6xl mx-auto relative md:pt-16 px-8 pb-0 print:p-0 dark:invert"
    >
      <Header {...header} />
      <div class="md:absolute top-8 left-8 right-8 print:static">
        <Contact {...contact} />
      </div>
      <TechStack {...techStack} />
      <Experience {...experience} />
      <Education {...education} />
    </div>
    <footer
      class="print:hidden mt-8 pt-5 pb-1 px-10 border-t-2 bg-slate-950 border-slate-800/80 dark:invert"
    >
      <p class="mb-3">Reach out to me at:</p>
      <Contact {...contact} />
    </footer>
  </body>
</html>
